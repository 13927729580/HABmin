<div class="col-md-4">
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <div>
                <span class="glyphicon glyphicon-list"></span>&nbsp{{t chartItemList}}

                <div class="btn-group pull-right">
                    <button type="button" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top"
                            title=""
                            data-original-title="Tooltip on top">
                        <a href="#" role="menuitem" {{action "showChart" item item.name}}><span
                                class="glyphicon glyphicon-play"></span></a>
                    </button>

                    <button type="button" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top"
                            title=""
                            data-original-title="Tooltip on top">
                        <a href="#" role="menuitem" {{action "clearSelection" item item.name}}><span
                                class="glyphicon glyphicon-remove"></span></a>
                    </button>

                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-cog"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li class="divider"></li>
                        {{#each service in model.services}}
                            <li {{bind-attr class="isSelectedService:active"}}>
                                <a href="#" role="menuitem">{{service.name}}</a>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div id="custom-search-form" class="input-group col-xs-12">
                {{input type="text" class="search-query" placeholder=filterPlaceholder value=filterText}}
                <span class="input-group-btn">
                    <button class="btn btn-default btn-xs" type="button" {{action "resetFilter"}}>
                        <span class="glyphicon glyphicon-remove-sign"></span>
                    </button>
                </span>
            </div>
        </div>
        <div id="itemList" class="list-group habmin-list">
            {{#each model.items}}
                <a href="#" role="presentation" class="list-group-item" {{action "clickItem" name}}>
                    {{iconImg}}
                    <span>{{label}}</span>
                    <span class="pull-right">
                        {{#if controller.isSelected}}
                            <span class="glyphicon glyphicon-check success"></span>
                        {{/if}}
                    </span>
                </a>
            {{else}}
                <div class="list-group-item text-center">{{t chartNoItemsToGraph}}</div>
            {{/each}}
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-md-6">
                    <h6>{{t chartTotalItems}}&nbsp<span class="label label-info">{{itemsTotal}}</span></h6>
                </div>
                <div class="col-md-6">
                    <h6>{{t chartItemsSelected}}&nbsp<span class="label label-success">{{itemsSelected}}</span></h6>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-8">



</div>